<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TabHost
        android:id="@+id/tabHost_detail_shop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:id="@+id/tabs1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/background_blur">
                    <ImageView
                        android:id="@+id/imgDetailShop_Product"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:layout_marginLeft="@dimen/margin_5dp"
                        android:layout_marginRight="@dimen/margin_5dp"
                        android:scaleType="fitXY"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_5dp"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvProduct_detailShop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/number_product"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            />
                        <Button
                            android:id="@+id/btn_product_filter"
                            android:layout_width="300dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_border_background_tim"
                            android:text="@string/filter_product"
                            android:textColor="@color/colorWhite"
                            android:layout_marginRight="@dimen/margin_5dp"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_updating_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="@dimen/margin_5dp"
                        android:layout_marginLeft="@dimen/margin_5dp"
                        android:text="@string/updating_product"
                        android:textColor="@color/colorWhite"
                        android:gravity="center"
                        >

                    </TextView>
                    <ListView
                        android:id="@+id/lvProductShop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:layout_marginRight="@dimen/margin_5dp"
                        android:layout_marginLeft="@dimen/margin_5dp"
                        >

                    </ListView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabs2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/imgDetailShop_Review"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:layout_marginLeft="@dimen/margin_5dp"
                        android:layout_marginRight="@dimen/margin_5dp"/>
                    <TextView
                        android:id="@+id/tv_nameShop_Review"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:layout_marginLeft="@dimen/margin_5dp"
                        />
                    <LinearLayout
                        android:layout_marginLeft="@dimen/margin_5dp"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:layout_width="130dp"
                        android:layout_height="20dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imgView_detailshop_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/star_rating_off"
                            />
                        <ImageView
                            android:id="@+id/imgView_detailshop_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/star_rating_off"
                            />
                        <ImageView
                            android:id="@+id/imgView_detailshop_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/star_rating_off"
                            />
                        <ImageView
                            android:id="@+id/imgView_detailshop_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/star_rating_off"
                            />
                        <ImageView
                            android:id="@+id/imgView_detailshop_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/star_rating_off"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_5dp"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvComment_ReviewShop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/comment"
                            android:textStyle="bold"
                            />
                        <Button
                            android:id="@+id/btn_Comment"
                            android:layout_width="300dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_border_background_tim"
                            android:text="@string/comment"
                            android:textColor="@color/colorWhite"
                            android:layout_marginRight="@dimen/margin_5dp"
                            />
                    </LinearLayout>
                    <ListView
                        android:id="@+id/lv_Review"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:layout_marginRight="@dimen/margin_5dp"
                        android:layout_marginLeft="@dimen/margin_5dp">
                    </ListView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tabs3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/imgDetailShop_infor"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:layout_marginLeft="@dimen/margin_5dp"
                        android:layout_marginRight="@dimen/margin_5dp"/>
                    <TextView
                        android:id="@+id/tv_nameShop_Infor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:layout_marginLeft="@dimen/margin_5dp"/>
                    <LinearLayout
                        android:layout_marginLeft="@dimen/margin_5dp"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:layout_width="130dp"
                        android:layout_height="20dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imgView_inforshop_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/star_rating_off"
                            />
                        <ImageView
                            android:id="@+id/imgView_inforshop_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/star_rating_off"
                            />
                        <ImageView
                            android:id="@+id/imgView_inforshop_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/star_rating_off"
                            />
                        <ImageView
                            android:id="@+id/imgView_inforshop_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/star_rating_off"
                            />
                        <ImageView
                            android:id="@+id/imgView_inforshop_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/star_rating_off"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_phone_shop_infor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_5dp"
                        android:layout_marginTop="@dimen/margin_5dp"/>
                    <TextView
                        android:id="@+id/tv_email_infor_shop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:layout_marginLeft="@dimen/margin_5dp"/>
                    <TextView
                        android:id="@+id/tv_address_infor_shop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:layout_marginLeft="@dimen/margin_5dp"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>
</LinearLayout>