<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TabHost
        android:id="@+id/tabHost_detail_shop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:id="@+id/tabs1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                   <ImageView
                       android:id="@+id/img_detail_product"
                       android:layout_width="match_parent"
                       android:layout_height="150dp"
                       android:layout_marginTop="@dimen/margin_5dp"
                       />
                    <TextView
                        android:id="@+id/tv_name_detail_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin"
                        android:layout_marginLeft="@dimen/margin"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_price_detail_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin"
                        android:layout_marginLeft="@dimen/margin"
                        />
                    <Button
                        android:id="@+id/btnPlaceOrder"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:text="@string/datmua"
                        android:layout_gravity="center"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/btn_border_background_tim"
                        android:layout_marginTop="@dimen/margin"/>
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/margin"
                        android:layout_marginLeft="@dimen/margin_5dp"
                        android:layout_marginRight="@dimen/margin_5dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_desc_product"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </ScrollView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabs2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <HorizontalScrollView
                        android:id="@+id/horizontalScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:fillViewport="true">
                        <LinearLayout
                            android:id="@+id/llGallery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="bottom"
                            android:orientation="horizontal"
                            android:scrollbars="vertical">
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tabs3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/img_product_seller"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />
                    <TextView
                        android:id="@+id/tv_name_product_seller"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:layout_marginLeft="@dimen/margin_5dp"/>
                    <LinearLayout
                        android:layout_marginLeft="@dimen/margin_5dp"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:layout_width="130dp"
                        android:layout_height="20dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imgView_seller_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/star_rating_off"
                            />
                        <ImageView
                            android:id="@+id/imgView_seller_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/star_rating_off"
                            />
                        <ImageView
                            android:id="@+id/imgView_seller_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/star_rating_off"
                            />
                        <ImageView
                            android:id="@+id/imgView_seller_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/star_rating_off"
                            />
                        <ImageView
                            android:id="@+id/imgView_seller_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/star_rating_off"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_phone_seller"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginTop="@dimen/margin_5dp"/>
                    <TextView
                        android:id="@+id/tv_email_product_seller"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginTop="@dimen/margin_5dp"/>
                    <TextView
                        android:id="@+id/tv_address_seller"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginTop="@dimen/margin_5dp"/>
                    <TextView
                        android:id="@+id/detail_seller"
                        android:text="@string/detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginRight="@dimen/margin"
                        android:layout_marginTop="@dimen/margin"
                        android:textColor="@color/colorBlue"
                        />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>
</LinearLayout>