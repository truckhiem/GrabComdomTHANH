<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blur"
    >
    <include layout="@layout/toolbar"/>
    <TextView
        android:id="@+id/tv_location"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_my_btn"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:text="5 Dong Da, Tan Binh, Ho Chi Minh."
        android:textColor="@color/colorWhite"
        android:textSize="14dp"
        android:gravity="center"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_nearby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nearby"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"/>
        <Button
            android:id="@+id/btn_viewmap"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/view_map"
            android:background="@drawable/btn_white_tim"
            android:layout_weight="2"
            android:textColor="@color/colorTim"
            />
    </LinearLayout>
    <ListView
        android:id="@+id/lv_shoponline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:dividerHeight="50dp"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginLeft="@dimen/margin">

    </ListView>

</LinearLayout>